@using ChartJS.Helpers.MVC;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Results";
}

@model IEnumerable<WebSiteTester.BLL.Dtos.TestResultDto>

@{
    if (Model != null)
    {
        @Html.ChartJS("ChartCanvas", (ChartTypeLine)ViewBag.ChartObj, "400px", "800px")

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Date</th>
                    <th scope="col">Response Time (ms)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Date</td>
                        <td>@item.ResponseTime</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}